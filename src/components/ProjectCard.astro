---
import Img from "./Img.astro";

/**
 * Props:
 * - title: string
 * - desc: string
 * - href: string
 * - img: imported image from /src/assets/images
 *
 * Example usage:
 * import preview from "@/assets/images/projects/farm/hero-1200x675.jpg";
 * <ProjectCard title="Farm Site" desc="Local beef preorders" href="/projects/farm" img={preview} />
 */
const { title, desc, href, img } = Astro.props;
---

<a
  href={href}
  class="block rounded-2xl border border-gray-200 overflow-hidden hover:shadow-lg transition-shadow duration-200"
  style="text-decoration:none;color:inherit;"
>
  <Img
    src={img}
    alt={title}
    width={1200}
    height={675}
    class="w-full object-cover aspect-[16/9]"
  />

  <div class="p-4">
    <h3 class="m-0 mb-1 text-lg font-semibold">{title}</h3>
    <p class="m-0 opacity-80 text-sm">{desc}</p>
  </div>
</a>
